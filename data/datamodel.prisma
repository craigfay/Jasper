type User {
  id: ID! @id
  email: String! @unique
  name: String!
  password: String!
  role: Role!
  threads: [Thread!]! 
  messages: [Message!]!
}

enum Role {
  ADMIN
  CUSTOMER
}

type Thread {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  participants: [User!]!
  messages: [Message!]!
}

type Message {
  id: ID! @id
  content: String!
  createdAt: DateTime!@createdAt
  updatedAt: DateTime! @updatedAt
  thread: Thread!
  author: User!
}